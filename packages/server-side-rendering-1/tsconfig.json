{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.json",
    "./src/**/*.css",
    "./src/routes/**/*.module.css",
    "./scripts/**/*",
    "./schemas/**/*.json",
    "./goldstack.json",
    "./src/typings.d.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "esnext",
    "noEmit": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "references": []
}